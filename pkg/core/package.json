{
    "name": "@sense-finance/v1-core",
    "version": "0.2.1",
    "description": "Sense V1 Core Contracts",
    "license": "UNLICENSED",
    "repository": {
        "type": "git",
        "url": "https://github.com/sense-finance/sense-v1.git",
        "directory": "pkg/core"
    },
    "files": [
        "src/**/*",
        "!src/tests/*"
    ],
    "scripts": {
        "build": "just build",
        "debug": "just debug",
        "test": "just test-local",
        "test:mainnet": "just test-mainnet",
        "testcov": "just test-local --coverage",
        "lint": "solhint -f table src/**/*.sol",
        "fix": "prettier --ignore-path .gitignore --write src/**/*.sol && yarn lint --fix",
        "size-contracts": "hardhat compile && hardhat size-contracts",
        "deploy:hardhat-fork:prod": "mkdir -p exports && hardhat --network hardhat deploy --export exports/localhost --tags scenario:prod",
        "deploy:hardhat-fork:sim": "mkdir -p exports && hardhat --network hardhat deploy --export exports/localhost --tags scenario:simulated",
        "node:hardhat-fork:prod": "mkdir -p exports && hardhat --network hardhat node --export exports/localhost --tags scenario:prod",
        "node:hardhat-fork:sim": "mkdir -p exports && hardhat --network hardhat node --export exports/localhost --tags scenario:simulated",
        "deploy:mainnet": "hardhat --network mainnet deploy --tags scenario:prod",
        "deploy:goerli": "hardhat --network goerli deploy --tags scenario:prod",
        "deploy:arbitrum": "hardhat --network arbitrum deploy --tags scenario:prod"
    },
    "dependencies": {
        "@openzeppelin/contracts": "4.3.2",
        "@rari-capital/solmate": "5.0.2",
        "@sense-finance/v1-fuse": "workspace:pkg/fuse",
        "@sense-finance/v1-utils": "workspace:pkg/utils",
        "@uniswap/v3-core": "^1.0.0",
        "@uniswap/v3-periphery": "^1.2.1"
    },
    "devDependencies": {
        "@nomiclabs/hardhat-ethers": "^2.0.2",
        "@nomiclabs/hardhat-etherscan": "^2.1.6",
        "@tenderly/hardhat-tenderly": "^1.0.12",
        "chai": "^4.3.4",
        "chai-ethers": "^0.0.1",
        "dayjs": "^1.10.7",
        "dotenv": "^10.0.0",
        "ethers": "^5.5.1",
        "hardhat": "^2.6.7",
        "hardhat-abi-exporter": "^2.3.0",
        "hardhat-contract-sizer": "^2.1.1",
        "hardhat-deploy": "^0.9.4",
        "hardhat-deploy-ethers": "^0.3.0-beta.11",
        "hardhat-spdx-license-identifier": "^2.0.3",
        "hardhat-watcher": "^2.1.1",
        "husky": "^7.0.2",
        "prettier": "^2.3.2",
        "prettier-plugin-solidity": "^1.0.0-beta.17",
        "solhint": "^3.3.6",
        "solhint-plugin-prettier": "^0.0.5"
    },
    "husky": {
        "hooks": {
            "pre-commit": "yarn fix"
        }
    }
}
