{
    "name": "@sense-finance/v1-space",
    "version": "0.3.2",
    "description": "Sense V1 Space Contract",
    "license": "UNLICENSED",
    "repository": {
        "type": "git",
        "url": "https://github.com/sense-finance/sense-v1.git",
        "directory": "pkg/space"
    },
    "files": [
        "src/**/*",
        "!src/tests/*"
    ],
    "scripts": {
        "build": "just build",
        "test": "just test-local",
        "turbo-test": "just turbo-test-local",
        "test:mainnet": "just test-mainnet",
        "testcov": "just test --coverage",
        "lint": "solhint -f table src/**/*.sol",
        "fix": "prettier --ignore-path .gitignore --write src/**/*.sol && yarn lint --fix",
        "size-contracts": "hardhat compile && hardhat size-contracts",
        "gas-snapshot": "just gas-snapshot"
    },
    "dependencies": {
        "@balancer-labs/v2-pool-utils": "^2.0.1",
        "@balancer-labs/v2-pool-weighted": "^2.0.1",
        "@balancer-labs/v2-solidity-utils": "^2.0.0",
        "@balancer-labs/v2-vault": "^2.0.0",
        "@openzeppelin/contracts": "4.3.2",
        "@rari-capital/solmate": "5.0.2",
        "@sense-finance/v1-core": "workspace:pkg/core"
    },
    "devDependencies": {
        "dotenv": "^10.0.0",
        "husky": "^7.0.2",
        "prettier": "^2.3.2",
        "prettier-plugin-solidity": "^1.0.0-beta.17",
        "solhint": "^3.3.6",
        "solhint-plugin-prettier": "^0.0.5"
    },
    "husky": {
        "hooks": {
            "pre-commit": "yarn fix"
        }
    }
}
