{
    "name": "@sense-finance/v1-fuse",
    "version": "0.4.2-beta",
    "description": "Sense V1 Fuse Contracts",
    "license": "UNLICENSED",
    "repository": {
        "type": "git",
        "url": "https://github.com/sense-finance/sense-v1.git",
        "directory": "pkg/fuse"
    },
    "files": [
        "src/**/*",
        "!src/tests/*"
    ],
    "scripts": {
        "build": "just build",
        "debug": "just debug",
        "test": "just test-local",
        "turbo-test": "just turbo-test-local",
        "turbo-test:mainnet": "just turbo-test-mainnet",
        "testcov": "just test-local --coverage",
        "lint": "solhint -f table src/**/*.sol",
        "fix": "prettier --ignore-path .gitignore --write src/**/*.sol && yarn lint --fix",
        "size-contracts": "hardhat compile && hardhat size-contracts",
        "gas-snapshot": "just gas-snapshot"
    },
    "dependencies": {
        "@rari-capital/solmate": "^6.2.0",
        "@sense-finance/v1-core": "workspace:pkg/core",
        "@sense-finance/v1-utils": "workspace:pkg/utils"
    },
    "devDependencies": {
        "dotenv": "^10.0.0",
        "husky": "^7.0.2",
        "prettier": "^2.3.2",
        "prettier-plugin-solidity": "^1.0.0-beta.17",
        "solhint": "^3.3.6",
        "solhint-plugin-prettier": "^0.0.5"
    },
    "husky": {
        "hooks": {
            "pre-commit": "yarn fix"
        }
    }
}
