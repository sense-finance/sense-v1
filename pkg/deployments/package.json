{
    "name": "@sense-finance/v1-deployments",
    "version": "0.3.2",
    "description": "Sense V1 Deployments",
    "license": "UNLICENSED",
    "repository": {
        "type": "git",
        "url": "https://github.com/sense-finance/sense-v1.git",
        "directory": "pkg/deployments"
    },
    "files": [
        "deploy/**/*",
        "src/**/*"
    ],
    "scripts": {
        "deploy:hardhat-fork:prod": "yarn prepare && hardhat --network hardhat deploy --export exports/localhost --tags scenario:prod",
        "deploy:hardhat-fork:sim": "yarn prepare && hardhat --network hardhat deploy --export exports/localhost --tags scenario:simulated",
        "node:hardhat-fork:prod": "yarn prepare && hardhat --network hardhat node --export exports/localhost --tags scenario:prod",
        "node:hardhat-fork:sim": "yarn prepare && hardhat --network hardhat node --export exports/localhost --tags scenario:simulated",
        "deploy:mainnet": "hardhat --network mainnet deploy --tags scenario:prod",
        "deploy:goerli": "hardhat --network goerli deploy --tags scenario:prod",
        "deploy:arbitrum": "hardhat --network arbitrum deploy --tags scenario:prod",
        "prepare": "mkdir -p exports && cp -n ../../.env ./.env || true"
    },
    "dependencies": {
        "@openzeppelin/contracts": "4.3.2",
        "@rari-capital/solmate": "5.0.2",
        "@sense-finance/v1-core": "workspace:pkg/core",
        "@sense-finance/v1-space": "workspace:pkg/space",
        "@sense-finance/v1-utils": "workspace:pkg/utils"
    },
    "devDependencies": {
        "@nomiclabs/hardhat-ethers": "^2.0.3",
        "@nomiclabs/hardhat-etherscan": "^2.1.6",
        "@tenderly/hardhat-tenderly": "^1.0.12",
        "dayjs": "^1.10.7",
        "ethers": "^5.5.1",
        "hardhat": "^2.8.0",
        "hardhat-abi-exporter": "^2.3.1",
        "hardhat-contract-sizer": "^2.3.0",
        "hardhat-deploy": "^0.9.23",
        "hardhat-deploy-ethers": "^0.3.0-beta.12",
        "hardhat-spdx-license-identifier": "^2.0.3",
        "hardhat-watcher": "^2.1.1",
        "husky": "^7.0.2",
        "prettier": "^2.3.2",
        "prettier-plugin-solidity": "^1.0.0-beta.17",
        "solhint": "^3.3.6",
        "solhint-plugin-prettier": "^0.0.5"
    },
    "husky": {
        "hooks": {
            "pre-commit": "yarn fix"
        }
    }
}
